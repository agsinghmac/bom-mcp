# Node.js MCP App Server (UI layer)
FROM node:20-slim

WORKDIR /app

# Copy package files and install dependencies
COPY mcp_app/package.json mcp_app/package-lock.json* ./
RUN npm ci --only=production

# Copy application code
COPY mcp_app/server.ts ./
COPY mcp_app/resources/ ./resources/

# Expose port
EXPOSE 8080

# Run MCP App server
CMD ["node", "server.ts"]